<%- contentFor('body') %>
<div class="row mt-5">
    <aside class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                Ask a question
            </div>
            <div class="card-body">
                <form action="/answers" method="post">
                    <input type="hidden" name="answerUser" value="<%= answerUser.username %>" />
                    <div class="form-group">
                        <textarea name="question" id="question" cols="30" rows="5" class="form-control" placeholder="Ask your question here..." required></textarea>
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 mt-3">
                            <div class="switch"> 
                                <input type="checkbox" name="is_annon" id="is_annon" />
                                <label for="is_annon"></label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 text-end">
                            <button type="submit" class="btn btn-primary mt-3">Ask!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-header bg-dark text-white">
                People
            </div>
            <div class="card-body">
                <% sugestions.forEach(function(sugestion) { %>
                    <div class="profile row mt-2">
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <img src="<%= sugestion.avatar %>" class="img-fluid img-profile" alt="">                    
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 mt-2 name-info">
                            <a href="/t/<%= sugestion.username %>" class=""><%= sugestion.name %></a>                    
                        </div>
                    </div>        
                <% }); %>                                     
            </div>
        </div>
    </aside>
    <section class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
        <% JSON.stringify(answers) %>
        <% answers.forEach(function(data) { %>
        <div class="row mt-2 question-box">
            <div class="card col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="card-body">
                    <div class="profile row">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <img src="<%= data.questionUser.avatar %>" class="img-fluid img-profile" alt="">                    
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10 mt-2 name-info">
                            <a href="" class=""><%= data.questionUser.name %></a>                    
                        </div>
                    </div>
                    <blockquote class="blockquote">
                        <p>
                            <%= data.question %>
                        </p>
                        <div class="blockquote-footer ml-2">
                            <%= data.answer %>
                        </div>
                    </blockquote>
                </div>
            </div>        
        </div>
        <% }) %>               
    </section>
</div>